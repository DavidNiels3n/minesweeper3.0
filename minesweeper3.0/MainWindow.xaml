<Window x:Class="minesweeper3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minesweeper3._0"
        mc:Ignorable="d"
        Title="Misesweeper" Height="450" Width="800">
    <StackPanel>

        <Menu Background="LightGray" >
            <MenuItem Header="Menu">
                <MenuItem Header="Deficulty">
                    <MenuItem Header="Easy" 
                              Click="MenuEasy_Click"/>
                    <MenuItem Header="Medium"
                              Click="MenuMedium_Click"/>
                    <MenuItem Header="Hard"
                              Click="MenuHard_Click"/>
                    
                </MenuItem>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        
        <Grid>
            <UniformGrid x:Name="GameGrid" 
           
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
        </Grid>

    </StackPanel>
</Window>
